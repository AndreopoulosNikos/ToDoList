@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex align-items-center justify-content-between">

            <div>
                @if (!string.IsNullOrEmpty(ScreenName))
                {
                    <span>Hello, <strong>@ScreenName</strong></span>
                }
            </div>
         <div class="d-flex">
                <a href="/mustchangepasswordmanager" class="nav-link">Change Password</a>
                <a href="#" @onclick="Logout" class="nav-link" style="margin-left:0">Logout</a>
            </div>
    
        </div>

        <article class="content px-4">
            @Body
        </article>
        <span class="text-muted ms-2" style="position:fixed; bottom:0;">&copy; @DateTime.Now.Year ❤️ Marina is the Best ❤️. All rights reserved.</span>
    </main>
   

</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
