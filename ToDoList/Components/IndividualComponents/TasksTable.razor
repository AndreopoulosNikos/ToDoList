@using Microsoft.AspNetCore.Components.Authorization
@using ToDoList.Models

<h3>Task Table</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th style="width: 150px;">Actions</th>
            <th>#</th>
            <th>Subject</th>
            <th>Action</th>
            <th>Department</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>Completed Date</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @if (PagedTasks.Any())
        {
            @foreach (var item in PagedTasks)
            {
                <tr class="@(item.CompletedDate == null && item.DueDate.Date < DateTime.Today ? "table-danger" : "")">
                    <!-- Actions column -->
                    <td style="max-width: 80px; vertical-align:middle;">
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => EdiTask(item.Id)">Edit</button>
                        <AuthorizeView Roles="Admin">
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteTask(item.Id)">Delete</button>
                        </AuthorizeView>
                    </td>
                    <td style="max-width: 150px; vertical-align:middle;">@item.Id</td>
                    <td style="max-width: 200px; vertical-align:middle;">@item.Subject</td>
                    <td style="max-width: 400px; white-space:normal; word-wrap:break-word; vertical-align:middle;">@item.Action</td>
                    <td style="max-width: 150px; vertical-align:middle;">@item.DepartmentName</td>
                    <td style="max-width: 150px; vertical-align: middle;">@item.TaskStatusName</td>
                    <td style="max-width: 150px; vertical-align: middle;">@item.DueDate.ToString("d", BrowserCulture)</td>
                    <td style="vertical-align:middle;">
                        @(item.CompletedDate.HasValue
                                        ? item.CompletedDate.Value.ToString("d", BrowserCulture)
                                        : string.Empty)
                    </td>
                    <td style="max-width:500px; white-space:normal; word-wrap:break-word; vertical-align:middle;">
                        @item.Notes
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No tasks available</td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-2">
    <div>
        <label>Page size:</label>
        <select class="form-select d-inline-block w-auto ms-2" @bind="PageSize">
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="50">50</option>
        </select>
    </div>

    <div>
        <button class="btn btn-outline-primary me-1" @onclick="FirstPage" disabled="@IsFirstPage">First</button>
        <button class="btn btn-outline-primary me-1" @onclick="PreviousPage" disabled="@IsFirstPage">Previous</button>
        <span>Page @CurrentPage of @TotalPages</span>
        <button class="btn btn-outline-primary ms-1" @onclick="NextPage" disabled="@IsLastPage">Next</button>
        <button class="btn btn-outline-primary ms-1" @onclick="LastPage" disabled="@IsLastPage">Last</button>
    </div>
</div>
