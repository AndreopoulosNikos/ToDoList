@using ToDoList.Models


<h3>Roles Table</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th style="width: 150px;">Actions</th>
            <th>#</th>
            <th>Role Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Roles.Any())
        {
            @foreach (var item in Roles)
            {
                <tr>
                    <!-- Actions column -->
                    <td style="width: 150px;">
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => EditRole(item.Id)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteRole(item.Id)">Delete</button>
                    </td>

                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No roles available</td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-2">
    <div>
        <label>Page size:</label>
        <select class="form-select d-inline-block w-auto ms-2" @bind="PageSize">
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="50">50</option>
        </select>
    </div>

    <div>
        <button class="btn btn-outline-primary me-1" @onclick="FirstPage" disabled="@IsFirstPage">First</button>
        <button class="btn btn-outline-primary me-1" @onclick="PreviousPage" disabled="@IsFirstPage">Previous</button>
        <span>Page @CurrentPage of @TotalPages</span>
        <button class="btn btn-outline-primary ms-1" @onclick="NextPage" disabled="@IsLastPage">Next</button>
        <button class="btn btn-outline-primary ms-1" @onclick="LastPage" disabled="@IsLastPage">Last</button>
    </div>
</div>